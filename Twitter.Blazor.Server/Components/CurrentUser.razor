@if (DataAccess.LoginUser != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@DataAccess.LoginUser.Username</h5>
            <h6 class="card-subtitle mb-2 text-muted">@DataAccess.LoginUser.Firstname @DataAccess.LoginUser.Lastname</h6>
            <button @onclick="ShowLogoutDialog" class="badge badge-pill badge-danger">Logout</button>
            <LogoutDialog @ref="LogoutDialog"></LogoutDialog>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">not inloged</h5>
            <button @onclick="ShowLoginDialog" class="badge badge-pill badge-primary">login</button>
            <LoginDialog @ref="LoginDialog"></LoginDialog>
        </div>
    </div>
}