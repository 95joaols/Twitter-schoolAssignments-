@if (User != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@User.Username</h5>
            <h6 class="card-subtitle mb-2 text-muted">@User.Firstname + " " + @User.Lastname</h6>
            <p class="card-text">@TweetP.Message</p>
            <a href="#" class="card-link">logout</a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">not inloged</h5>
            <p class="card-text">@TweetP.Message</p>
            <a href="#" class="card-link">login</a>
        </div>
    </div>
}