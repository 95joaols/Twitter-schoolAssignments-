<div class="card">
    <div class="card-body">
        <div class="row">
            <div>
                <a href="@($"UserProfile/{MessageP.Item3}")">
                    <h5 class="card-title">@MessageP.Item1</h5>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="card-text">@MessageP.Item2</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button @onclick="SendMessage" class="badge badge-pill badge-primary"><i class="fas fa-comment"></i></button>
                <Message @ref="Message" Idto="@MessageP.Item3" Nameto="@MessageP.Item1"></Message>
            </div>
        </div>
    </div>
</div>
