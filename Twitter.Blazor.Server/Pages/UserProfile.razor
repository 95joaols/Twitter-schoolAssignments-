@page "/UserProfile"

@if (DataAccess.User != null)
{
    <button @onclick="EditUser" class="btn btn-dark table-btn quick-add-btn"><i class="fas fa-user-edit"></i></button>
    <EditUserDialog @ref="EditUserDialog" UserLoging="@DataAccess.User"></EditUserDialog>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@DataAccess.User.Username</h1>
            <p class="lead"><i>@FullName</i></p>
            <p class="lead">@DataAccess.User.Biography</p>
        </div>
    </div>
}

@if (DataAccess.Tweets == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var Tweet in DataAccess.Tweets)
    {
        <TweetC TweetP=Tweet></TweetC>
    }
}
